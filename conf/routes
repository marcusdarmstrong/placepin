# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index
GET     /:id                        controllers.Application.showTrip(id: Long)

POST    /api/v1/point                     controllers.Application.addPoint
POST    /api/v1/annotation                controllers.Application.addAnnotation
PUT     /api/v1/annotation/:id            controllers.Application.updateAnnotation(id: Long)
GET     /api/v1/trip/:id 				  controllers.Application.getTrip(id: Long)
GET     /api/v1/point/:postId/annotations controllers.Application.getAnnotations(postId: Long)
DELETE  /api/v1/point/:id                 controllers.Application.deletePoint(id: Long)



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
